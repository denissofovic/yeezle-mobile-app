<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Yeezle.Dark" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:statusBarColor">#121212</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="ModernButton.Dark" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/accent</item>
    </style>

    <style name="ModernCard.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">#1E1E1E</item>
    </style>

    <style name="ModernTextField.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxStrokeColor">@color/accent</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <style name="LogoText.Dark">
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">@font/yeezle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ModernBottomNavigation.Dark" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextColor">@color/bottom_nav_color_state</item>
        <item name="itemIconTint">@color/bottom_nav_color_state</item>
    </style>

    <style name="ModernStatsCard.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:checkable">false</item>
        <item name="cardBackgroundColor">#2D2D2D</item>
    </style>
</resources>