<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common styles -->
    <style name="Theme.Yeezle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="ModernButton" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="ModernCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <style name="ModernTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <!-- Logo style -->
    <style name="LogoText">
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/yeezle</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="ModernBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/surface</item>
        <item name="elevation">8dp</item>
        <item name="itemActiveIndicatorStyle">@style/App.ActiveIndicator</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="App.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/accent</item>
    </style>

</resources>